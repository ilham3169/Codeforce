{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "env": {
                        "POSIXLY_CORRECT": "1"
                    }
                }
            },
            "problemMatcher": ["$gcc"],
            "group": {"kind": "build", "isDefault": true}
        }
    ]
}